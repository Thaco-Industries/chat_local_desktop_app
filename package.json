{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "author": "THACO INDUSTRIES",
  "description": "Chat nội bộ trung tâm R&D",
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "29.5.14",
    "@types/node": "22.8.6",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "axios": "1.7.7",
    "clsx": "2.1.1",
    "daisyui": "4.12.14",
    "electron-webpack": "^2.8.2",
    "emoji-picker-react": "^4.12.0",
    "flowbite-react": "^0.10.2",
    "form-data": "4.0.0",
    "formik": "2.4.6",
    "js-cookie": "3.0.5",
    "moment": "2.30.1",
    "node-notifier": "10.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.27.0",
    "react-scripts": "5.0.1",
    "react-toastify": "10.0.6",
    "socket.io-client": "4.8.1",
    "typescript": "4.9.5",
    "uuid": "11.0.3",
    "web-vitals": "4.2.4",
    "yup": "1.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "npx electronmon --trace-warnings .",
    "electron:start": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:package:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 electron version",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.electron.chatapp",
    "productName": "Chat nội bộ trung tâm R&D",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "devDependencies": {
    "@types/electron": "1.6.12",
    "@types/js-cookie": "3.0.6",
    "@types/lodash": "4.17.13",
    "concurrently": "9.1.0",
    "cross-env": "7.0.3",
    "electron": "33.2.0",
    "electron-builder": "25.1.8",
    "electronmon": "2.0.3",
    "tailwindcss": "3.4.14",
    "wait-on": "8.0.1"
  }
}
